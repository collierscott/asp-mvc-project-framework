@model Project.WebUI.Models.Demos.PageModels.GridPageModel
@{
    ViewBag.Title = "Create a DataTable Grid";
    var page = Model;
    var facility = ViewBag.Facility;
}
@section HeaderCss{
    <link href="~/Scripts/datatables/media/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section HeaderScripts {
    <script src="~/Scripts/datatables/media/js/jquery.dataTables.min.js"></script>
}
@{ Html.RenderAction("Menu", "Nav", new { selected = "Demos", parameters = new { facility } }); }
<div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-8">
        @{
            Html.RenderAction("LastUpdated", "Home");
        }
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div id="grid-wrapper" style="width: 100%; text-align: center;">
            <div id="grid-content" style="display: inline-block;">
                @Html.Partial("Partial/_DemoGrid", page.Grid)
            </div>
        </div>
    </div>
</div>
@section BottomScripts {
    <script>
        (function ($) {

            $(function () {

                $('#toolset-table').dataTable();

            });

        })(jQuery);
</script>
}