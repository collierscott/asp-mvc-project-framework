@using Project.WebUI.Utilities
@using Infrastructure.Data.Notify
@using StackExchange.Profiling
@{
    var messages = (Notifications)ViewBag.Messages;
}
<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
